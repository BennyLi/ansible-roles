CONTAINER_NAME="psono_db"
POSTGRES_DB="psono"
{% raw %}
POSTGRES_USER="$(/usr/local/bin/docker container inspect --format='{{range .Config.Env}}{{println .}}{{end}}' "$CONTAINER_NAME" | grep POSTGRES_USER | cut -d = -f 2)"
{% endraw %}

